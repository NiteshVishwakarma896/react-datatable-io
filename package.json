{
  "name": "react-datatable-io",
  "version": "1.0.2",
  "description": "React-Datatable IO is a component which provide ability to create multifunctional table using single component like jQuery Datatable",
  "keywords": ["react-table","react-datatable","datatable","table"],
  "author": "NiteshVishwakarma896",
  "license": "MIT",
  "repository": "NiteshVishwakarma896/react-datatable-io",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "bootstrap": "^4.1.3",
    "bootstrap-icons": "^1.10.4",
    "cross-env": "^7.0.2",
    "export-from-json": "^1.7.2",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "multi-select-react": "^0.1.8",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^8.3.2",
    "prettier": "^2.0.4",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.4",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "files": [
    "dist"
  ]
}
